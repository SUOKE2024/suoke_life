{
  "optimization": {
    "memo": {
      "enabled": true,
      "autoApply": true,
      "excludePatterns": [
        "*Test*",
        "*Mock*"
      ]
    },
    "callback": {
      "enabled": true,
      "suggestOnly": true,
      "patterns": [
        "handle*",
        "on*",
        "*Handler"
      ]
    },
    "useMemo": {
      "enabled": true,
      "suggestOnly": true,
      "expensiveOperations": [
        "filter",
        "map",
        "reduce",
        "sort",
        "find",
        "JSON.parse",
        "JSON.stringify"
      ]
    }
  },
  "monitoring": {
    "enabled": true,
    "threshold": {
      "renderTime": 16,
      "rerenderCount": 5
    }
  }
}