# 服务配置
SERVICE__SERVICE_NAME=xiaoke-service
SERVICE__SERVICE_VERSION=1.0.0
SERVICE__ENVIRONMENT=development
SERVICE__DEBUG=true
SERVICE__HOST=0.0.0.0
SERVICE__PORT=8000
SERVICE__WORKERS=1

# 数据库配置
DATABASE__POSTGRES_HOST=localhost
DATABASE__POSTGRES_PORT=5432
DATABASE__POSTGRES_USER=xiaoke
DATABASE__POSTGRES_PASSWORD=your_password_here
DATABASE__POSTGRES_DB=xiaoke_db

DATABASE__MONGODB_URL=mongodb://localhost:27017
DATABASE__MONGODB_DB=xiaoke_knowledge

DATABASE__REDIS_URL=redis://localhost:6379/0

# AI配置
AI__OPENAI_API_KEY=your_openai_api_key_here
AI__OPENAI_BASE_URL=https://api.openai.com/v1
AI__OPENAI_MODEL=gpt-4

AI__ANTHROPIC_API_KEY=your_anthropic_api_key_here

AI__VECTOR_DB_TYPE=chromadb
AI__VECTOR_DB_PATH=./data/vector_db

AI__TCM_KNOWLEDGE_ENABLED=true

# 安全配置
SECURITY__SECRET_KEY=your-secret-key-change-in-production
SECURITY__ALGORITHM=HS256
SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY__REFRESH_TOKEN_EXPIRE_DAYS=7

SECURITY__CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
SECURITY__CORS_CREDENTIALS=true

# 监控配置
MONITORING__LOG_LEVEL=INFO
MONITORING__LOG_FORMAT=json
MONITORING__LOG_FILE=./logs/xiaoke-service.log

MONITORING__METRICS_ENABLED=true
MONITORING__METRICS_PORT=8001

MONITORING__TRACING_ENABLED=false
MONITORING__JAEGER_ENDPOINT=http://localhost:14268/api/traces

MONITORING__HEALTH_CHECK_INTERVAL=30 