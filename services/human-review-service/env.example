# 基本配置
APP_NAME=人工审核服务
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

# gRPC配置
GRPC_ENABLED=true
GRPC_PORT=50051

# 数据库配置
DB_URL=postgresql+asyncpg://postgres:password@localhost:5432/human_review
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_TIMEOUT=5

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=Asia/Shanghai
CELERY_ENABLE_UTC=true

# AI引擎配置
AI_TEXT_MODEL_NAME=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
AI_TEXT_MODEL_CACHE_DIR=./models/text
AI_IMAGE_MODEL_NAME=microsoft/DiT-base-finetuned-ade-512-512
AI_IMAGE_MODEL_CACHE_DIR=./models/image
AI_RISK_THRESHOLD_HIGH=0.8
AI_RISK_THRESHOLD_MEDIUM=0.5
AI_RISK_THRESHOLD_LOW=0.2
AI_USE_GPU=false
AI_GPU_DEVICE=cuda:0
AI_BATCH_SIZE=32
AI_MAX_SEQUENCE_LENGTH=512

# 工作流配置
WORKFLOW_MAX_CONCURRENT_TASKS=5
WORKFLOW_TASK_TIMEOUT=3600
WORKFLOW_AUTO_ASSIGN_ENABLED=true
WORKFLOW_QUALITY_CHECK_ENABLED=true
WORKFLOW_QUALITY_THRESHOLD=0.85
WORKFLOW_DOUBLE_REVIEW_THRESHOLD=0.7

# 安全配置
SECURITY_SECRET_KEY=your-secret-key-change-in-production
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_EXPIRE_MINUTES=30
SECURITY_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
SECURITY_CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
SECURITY_ENCRYPTION_KEY=
SECURITY_HASH_ROUNDS=12

# 监控配置
MONITORING_METRICS_ENABLED=true
MONITORING_METRICS_PORT=9090
MONITORING_TRACING_ENABLED=true
MONITORING_TRACING_ENDPOINT=http://localhost:4317
MONITORING_LOG_LEVEL=INFO
MONITORING_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
MONITORING_SENTRY_DSN=
MONITORING_SENTRY_ENVIRONMENT=development

# 存储配置
STORAGE_TYPE=local
STORAGE_LOCAL_STORAGE_PATH=./storage
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=
STORAGE_S3_ACCESS_KEY=
STORAGE_S3_SECRET_KEY=
STORAGE_MINIO_ENDPOINT=http://localhost:9000
STORAGE_MINIO_ACCESS_KEY=minioadmin
STORAGE_MINIO_SECRET_KEY=minioadmin123
STORAGE_MINIO_BUCKET=human-review

# 外部服务配置
USER_SERVICE_URL=http://localhost:8001
AUTH_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8003

# 开发工具配置
PYTEST_ADDOPTS=-v --tb=short
COVERAGE_FAIL_UNDER=85 