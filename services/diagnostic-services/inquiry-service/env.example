# 问诊服务环境变量配置示例
# 复制此文件为 .env 并根据实际环境修改配置

# 基础配置
APP_NAME=inquiry-service
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# 数据库配置
DB_URL=postgresql+asyncpg://user:password@localhost:5432/inquiry_service
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Redis 配置
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# gRPC 服务配置
GRPC_HOST=0.0.0.0
GRPC_PORT=50052
GRPC_MAX_WORKERS=10
GRPC_MAX_RECEIVE_MESSAGE_LENGTH=4194304
GRPC_MAX_SEND_MESSAGE_LENGTH=4194304
GRPC_COMPRESSION=gzip

# 日志配置
LOG_LEVEL=INFO
LOG_ROTATION=1 day
LOG_RETENTION=30 days
LOG_COMPRESSION=zip
LOG_SERIALIZE=false

# AI 服务配置
AI_OPENAI_API_KEY=your-openai-api-key-here
AI_OPENAI_BASE_URL=https://api.openai.com/v1
AI_ANTHROPIC_API_KEY=your-anthropic-api-key-here
AI_DEFAULT_MODEL=gpt-4
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7
AI_TIMEOUT=30

# 中医知识库配置
TCM_DATA_PATH=data/tcm_knowledge
TCM_AUTO_CREATE_SAMPLE_DATA=true
TCM_CACHE_TTL=3600
TCM_MIN_CONFIDENCE=0.6

# 监控配置
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_PORT=8080
MONITORING_ENABLE_TRACING=false
MONITORING_JAEGER_ENDPOINT=
MONITORING_SENTRY_DSN=

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=* 