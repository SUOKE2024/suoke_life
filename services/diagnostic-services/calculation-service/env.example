# 算诊微服务环境变量配置示例

# 基本配置
SERVICE_NAME=calculation-service
VERSION=1.0.0
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8005

# 日志配置
LOG_LEVEL=INFO

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost/calculation_db
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017/calculation_db

# 安全配置
SECRET_KEY=your-secret-key-here-please-change-in-production
ALLOWED_HOSTS=["*"]

# 算诊配置
TIMEZONE=Asia/Shanghai
ASTRONOMICAL_DATA_PATH=/data/astronomical

# 机器学习配置
MODEL_PATH=/models
MODEL_VERSION=v1.0.0

# 缓存配置
CACHE_TTL=3600
CACHE_PREFIX=calc:

# 限流配置
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 外部服务配置
USER_SERVICE_URL=http://user-service:8001
HEALTH_DATA_SERVICE_URL=http://health-data-service:8002 