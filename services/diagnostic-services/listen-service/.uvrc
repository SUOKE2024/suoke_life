# UV 配置文件
# 设置默认 PyPI 镜像源为清华大学镜像

[tool.uv]
index-url = "https://pypi.tuna.tsinghua.edu.cn/simple/"

# 备用镜像源
extra-index-url = [
    "https://mirrors.aliyun.com/pypi/simple/",
    "https://pypi.douban.com/simple/",
]

# 信任的主机
trusted-host = [
    "pypi.tuna.tsinghua.edu.cn",
    "mirrors.aliyun.com", 
    "pypi.douban.com",
] 