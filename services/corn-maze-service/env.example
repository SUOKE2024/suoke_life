# 应用基本配置
APP_NAME="Corn Maze Service"
APP_VERSION="0.2.0"
DEBUG=false
ENVIRONMENT=development

# 数据库配置
DATABASE__URL=sqlite:///./data/corn_maze.db
DATABASE__ECHO=false
DATABASE__POOL_SIZE=10
DATABASE__MAX_OVERFLOW=20
DATABASE__POOL_TIMEOUT=30
DATABASE__POOL_RECYCLE=3600

# Redis 配置
REDIS__URL=redis://localhost:6379/0
REDIS__MAX_CONNECTIONS=10
REDIS__RETRY_ON_TIMEOUT=true
REDIS__SOCKET_TIMEOUT=5.0
REDIS__SOCKET_CONNECT_TIMEOUT=5.0

# gRPC 服务配置
GRPC__HOST=0.0.0.0
GRPC__PORT=50057
GRPC__MAX_WORKERS=10
GRPC__MAX_RECEIVE_MESSAGE_LENGTH=4194304
GRPC__MAX_SEND_MESSAGE_LENGTH=4194304
GRPC__ENABLE_REFLECTION=true
GRPC__ENABLE_HEALTH_CHECK=true

# HTTP 服务配置
HTTP__HOST=0.0.0.0
HTTP__PORT=51057
HTTP__RELOAD=false
HTTP__WORKERS=1
HTTP__ACCESS_LOG=true

# 监控配置
MONITORING__ENABLE_PROMETHEUS=true
MONITORING__PROMETHEUS_PORT=51058
MONITORING__ENABLE_TRACING=true
MONITORING__JAEGER_ENDPOINT=
MONITORING__ENABLE_LOGGING=true
MONITORING__LOG_LEVEL=INFO

# 迷宫配置
MAZE__DEFAULT_SIZE=20
MAZE__MAX_SIZE=100
MAZE__MIN_SIZE=5
MAZE__KNOWLEDGE_NODE_DENSITY=0.1
MAZE__CHALLENGE_NODE_DENSITY=0.05
MAZE__MAX_USER_MAZES=10

# AI 配置
AI__OPENAI_API_KEY=
AI__OPENAI_BASE_URL=
AI__MODEL_NAME=gpt-3.5-turbo
AI__MAX_TOKENS=1000
AI__TEMPERATURE=0.7

# 安全配置
SECURITY__SECRET_KEY=your-secret-key-here-change-in-production
SECURITY__ALGORITHM=HS256
SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY__CORS_ORIGINS=["*"]
SECURITY__CORS_METHODS=["*"]
SECURITY__CORS_HEADERS=["*"] 