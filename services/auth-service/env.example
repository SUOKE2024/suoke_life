# 应用配置
APP_NAME=索克生活认证服务
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# 服务器配置
SERVER__HOST=0.0.0.0
SERVER__PORT=8000
SERVER__WORKERS=1
SERVER__RELOAD=false
SERVER__LOG_LEVEL=info

# 数据库配置
DATABASE__HOST=localhost
DATABASE__PORT=5432
DATABASE__NAME=auth_db
DATABASE__USER=auth_user
DATABASE__PASSWORD=auth_password
DATABASE__POOL_SIZE=10
DATABASE__MAX_OVERFLOW=20
DATABASE__ECHO=false

# Redis配置
REDIS__HOST=localhost
REDIS__PORT=6379
REDIS__DB=0
REDIS__PASSWORD=
REDIS__MAX_CONNECTIONS=10

# JWT配置
JWT__SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT__ALGORITHM=HS256
JWT__ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT__REFRESH_TOKEN_EXPIRE_DAYS=7
JWT__ISSUER=suoke-auth-service
JWT__AUDIENCE=suoke-life

# 安全配置
SECURITY__PASSWORD_MIN_LENGTH=8
SECURITY__PASSWORD_REQUIRE_UPPERCASE=true
SECURITY__PASSWORD_REQUIRE_LOWERCASE=true
SECURITY__PASSWORD_REQUIRE_NUMBERS=true
SECURITY__PASSWORD_REQUIRE_SYMBOLS=true
SECURITY__MAX_LOGIN_ATTEMPTS=5
SECURITY__LOCKOUT_DURATION_MINUTES=30
SECURITY__SESSION_TIMEOUT_MINUTES=60
SECURITY__MFA_ISSUER_NAME=Suoke Life

# CORS配置
CORS_ORIGINS=["*"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# OAuth配置
OAUTH_PROVIDERS__GOOGLE__CLIENT_ID=
OAUTH_PROVIDERS__GOOGLE__CLIENT_SECRET=
OAUTH_PROVIDERS__GOOGLE__REDIRECT_URI=

OAUTH_PROVIDERS__WECHAT__APP_ID=
OAUTH_PROVIDERS__WECHAT__APP_SECRET=
OAUTH_PROVIDERS__WECHAT__REDIRECT_URI= 