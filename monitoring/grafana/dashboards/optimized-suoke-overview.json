{
  "dashboard": {
    "id": null,
    "title": "索克生活 - 优化监控概览",
    "tags": ["suoke-life", "overview", "optimized"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "系统健康状态",
        "type": "stat",
        "targets": [
          {
            "expr": "up",
            "legendFormat": "{{job}} - {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "智能体响应时间 (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(agent_request_duration_seconds_bucket{agent=~\"xiaoai|xiaoke|laoke|soer\"}[5m]))",
            "legendFormat": "{{agent}} P95"
          }
        ],
        "yAxes": [
          {
            "label": "响应时间 (秒)",
            "max": 5,
            "min": 0
          }
        ],
        "thresholds": [
          {"value": 2, "colorMode": "critical", "op": "gt"},
          {"value": 1, "colorMode": "warning", "op": "gt"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "HTTP错误率",
        "type": "graph",
        "targets": [
          {
            "expr": "(rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m])) * 100",
            "legendFormat": "{{service}} 错误率"
          }
        ],
        "yAxes": [
          {
            "label": "错误率 (%)",
            "max": 20,
            "min": 0
          }
        ],
        "thresholds": [
          {"value": 10, "colorMode": "critical", "op": "gt"},
          {"value": 5, "colorMode": "warning", "op": "gt"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "系统资源使用率",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU使用率 - {{instance}}"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "内存使用率 - {{instance}}"
          }
        ],
        "yAxes": [
          {
            "label": "使用率 (%)",
            "max": 100,
            "min": 0
          }
        ],
        "thresholds": [
          {"value": 90, "colorMode": "critical", "op": "gt"},
          {"value": 80, "colorMode": "warning", "op": "gt"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "智能体协作状态",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(agent_collaboration_requests_total[5m])",
            "legendFormat": "{{from_agent}} -> {{to_agent}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "数据库性能指标",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends / pg_settings_max_connections * 100",
            "legendFormat": "连接使用率 (%)"
          },
          {
            "expr": "rate(pg_stat_database_xact_commit[5m])",
            "legendFormat": "事务提交率 (/s)"
          }
        ],
        "yAxes": [
          {
            "label": "百分比/频率",
            "max": 100,
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "业务指标趋势",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(user_registrations_total[1h])",
            "legendFormat": "用户注册 (/h)"
          },
          {
            "expr": "rate(health_data_uploads_total[1h])",
            "legendFormat": "健康数据上传 (/h)"
          },
          {
            "expr": "rate(diagnostic_requests_total[1h])",
            "legendFormat": "诊断请求 (/h)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 8,
        "title": "安全事件监控",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(auth_failed_attempts_total[5m])",
            "legendFormat": "登录失败 (/s)"
          },
          {
            "expr": "rate(http_requests_total{status=\"401\"}[5m])",
            "legendFormat": "未授权请求 (/s)"
          }
        ],
        "yAxes": [
          {
            "label": "频率 (/s)",
            "min": 0
          }
        ],
        "thresholds": [
          {"value": 1, "colorMode": "critical", "op": "gt"},
          {"value": 0.5, "colorMode": "warning", "op": "gt"}
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
} 